<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <TextView
        android:id="@+id/TextViewTitulo"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Aluno"
        android:textSize="15pt"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/EditTextRA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewTitulo"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="20dp"
        android:hint="RA"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/EditTextSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextRA"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        tools:ignore="UnknownId"
        android:hint="SENHA"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/TextViewNovoCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextSenha"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:text="Novo Cadastro"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:onClick="NovoCadastro"/>

    <Button
        android:id="@+id/ButtonLogin"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="15pt"
        android:layout_marginBottom="65pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="Login"/>

</androidx.constraintlayout.widget.ConstraintLayout>